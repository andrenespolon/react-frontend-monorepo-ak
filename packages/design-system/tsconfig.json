{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"isolatedModules": false,
		"module": "commonjs",
		"declaration": true,
		"outDir": "dist",
		"paths": {
			"@components/*": ["./src/components/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@styles/*": ["./src/styles/*"],
			"@utils/*": ["./src/utils/*"],
			"@views/*": ["./src/views/*"]
		}
	},
	"include": ["src/**/*", "vite.config.ts"],
	"exclude": ["node_modules", ".jest", ".storybook", "dist"]
}
